#!/usr/bin/env ruby

require 'bundler/setup'
require 'cloudflair'
require 'dotenv'

Dotenv.load

Cloudflair.configure do |c|
  c.cloudflare.auth.key = ENV['AUTH_KEY']
  c.cloudflare.auth.email = ENV['AUTH_MAIL']
  c.faraday.logger = :detailed_logger
end

if ENV['CF_ZONE']
  def z
    @z ||= Cloudflair.zone ENV['CF_ZONE']
  end
end

#p.everything true

require 'irb'
IRB.start
